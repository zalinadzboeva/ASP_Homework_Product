@model List<Product>
@{
    ViewData["Title"] = "Home Page";
}

<div class=" product-grid">
    @foreach (var product in Model)
    {
            <div class="product-card">
                    <img src="@product.Imeg" >
                <a style="color:#000" href ="/product/index/@product.Id">@product.Name</a>
                <p class="product__info">@product.Cost</p>
                <div class = "basket">
                        <a  style="color:#000" href="/catalog/add?productId=@product.Id">Добавить в корзину</a>
                </div>
            </div>
    }
</div>


